        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Height="53" Visibility="Hidden" HorizontalAlignment="Left" FontSize="28" Foreground="#A5E887" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" TextAlignment="Center" FontStyle="Italic" FontWeight="Heavy" Margin="502,165,0,0" Name="textBox1" VerticalAlignment="Top" Width="202" Background="#B3F4E9" FontStretch="UltraCondensed"></TextBox>
        <Button Content="Войти" Height="32" HorizontalAlignment="Left" Margin="274,165,0,0" x:Name="btn2" VerticalAlignment="Top" Width="202" Click="btn2_Click" />
        <TextBox Height="53" Visibility="Hidden" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" TextAlignment="Center" FontSize="28" Foreground="#A5E887" Background="#B3F4E9" FontStyle="Italic" FontWeight="Heavy" Margin="61,165,0,0" x:Name="SerTB" VerticalAlignment="Top" Width="202" FontStretch="UltraCondensed"/>
        <TextBox x:Name="tbLogin" Height="33" HorizontalAlignment="Left" FontSize="20" Foreground="White" FontStyle="Italic" FontWeight="Heavy" Margin="274,74,0,0"  VerticalAlignment="Top" Width="202" Background="#B3F4E9" FontStretch="UltraCondensed"/>
