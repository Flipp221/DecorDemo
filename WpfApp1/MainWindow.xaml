        <TextBlock Height="45" HorizontalAlignment="Left" FontSize="28" Foreground="#A5E887" TextAlignment="Center" Text="Password:" FontStyle="Italic" FontWeight="Heavy" Margin="126,115,0,0" x:Name="SerTB_Copy" VerticalAlignment="Top" Width="148" FontStretch="UltraCondensed"/>
        <Button Content="Вход в роли гостя" Height="32" HorizontalAlignment="Left" Margin="274,217,0,0" x:Name="btnAuth" VerticalAlignment="Top" Width="202" Click="btnAuth_Click" Cursor="Hand" />
    </Grid>
</Window>
